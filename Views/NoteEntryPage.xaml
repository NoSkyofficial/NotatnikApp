<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotatnikApp.Views.NoteEntryPage"
             Title="Wprowadź Notatkę">

    <StackLayout Padding="20">
        <Editor x:Name="noteEditor" HeightRequest="200" Placeholder="Wpisz notatkę tutaj..."/>
        <Button Text="Zapisz Notatkę" Clicked="OnSaveNoteClicked"/>
    </StackLayout>
</ContentPage>